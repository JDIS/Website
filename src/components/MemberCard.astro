---
import { Image } from "astro:assets";

export interface Props {
    member: {
        name: string;
        title: string;
        image_url: string;
        github: string;
        linkedin: string;
    };
}

const { member } = Astro.props;

// Dynamically import the member image
const images = import.meta.glob("../assets/members/*", { eager: true });
const imagePath = `../assets/members/${member.image_url}`;
const memberImage = (images[imagePath] as any)?.default;
---

<div class="text-center">
    <Image src={memberImage} alt={member.name} class="mx-auto rounded-full" width={130} height={130} />
    <h3 class="mt-2 font-semibold">{member.name}</h3>
    <p class="mb-2 text-sm">{member.title}</p>
    <div class="flex justify-center gap-5">
        <a href={member.github} class="text-black"><i class="fab fa-github"></i></a>
        <a href={member.linkedin} class="text-black"><i class="fab fa-linkedin"></i></a>
    </div>
</div>
